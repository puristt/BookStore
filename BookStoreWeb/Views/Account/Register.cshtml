@model BookStoreWeb.Models.RegisterViewModel


<h2>@ViewBag.Title.</h2>

<div class="row">
    <div class="container">
        <div class="col-md-6">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Yeni bir hesap oluştur.</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email,"E-posta", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, "Parola", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, "Parola tekrar", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Kayıt ol" />
                    </div>
                </div>
            }
        </div>
        <div class="col-md-4">
            <h3>GİRİŞ YAP</h3>

            <p>Zaten üye misiniz ?</p>

            <div class="col-md-offset-2 col-md-10">
                <a class="btn btn-default" href="@Url.Action("/Login")">Üye girişi yapmak için tıklayınız</a>
            </div>

        </div>
    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
