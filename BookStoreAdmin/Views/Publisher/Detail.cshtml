@model Entities.DataModels.Publisher

@{
    ViewBag.Title = "Detail";
}




    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    YENİ YAYINEVİ EKLE
                </header>
                <div class="panel-body">
                    <div class="form">
                        @using (Html.BeginForm("Detail", "Publisher", FormMethod.Post, new { @class = "form-validate form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @{
                                    string js = string.Empty;
                                    if (TempData["Success"] != null)
                                    {
                                        <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
                                        @section scripts{
                                            <script>
                                            $(document).ready(function () {
                                                setTimeout(function () {
                                                    window.location = "/Publisher/Index"
                                                }, 3000);
                                            });
                                            </script>
                                        }
                                    }
                                }
                                @Html.LabelFor(model => model.Name, "Yayınevi Adı", htmlAttributes: new { @class = "control-label col-lg-2" })
                                <div class="col-lg-6">
                                    @Html.TextBoxFor(model => model.Name, null, htmlAttributes: new { @class = "form-control", @required = "required" })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <button class="btn btn-success" type="submit">Gönder</button>
                                    <a href="@Url.Action("Index","Publisher")" class="btn btn-default" type="button">Geri</a>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </section>
        </div>
    </div>