@using Entities.DataModels

@model IEnumerable<Author>



<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
            <li><i class="icon_document_alt"></i>Forms</li>
            <li><i class="fa fa-files-o"></i>Form Validation</li>
        </ol>
    </div>
</div>
<!-- Form validations -->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <div class="panel-body">
                <div class="col-lg-offset-2 col-lg-9 text-right">
                    <a class="btn btn-primary" href="@Url.Action("Detail/")"><i class="icon_plus_alt2"></i> Yazar ekle</a>
                </div>
                <table class="table table-striped table-advance table-hover">
                    <thead>
                        <tr>
                            <th>
                                <input class="form-control" type="text" placeholder="Filter by Ad" data-index="0">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th><i class="icon_calendar"></i> Yazar Adı</th>
                            <th><i class="icon_mail_alt"></i> Açıklama</th>
                            <th>Aksiyonlar</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>
                                    <div class="btn-group">
                                        <a id="editButton(@item.Id)" class="btn btn-warning" href="@Url.Action("Detail/" + item.Id)" style="color: rgb(66, 64, 64);"><i class="icon_plus_alt2"></i> <b> Düzenle</b></a>
                                        <a id="deleteButton(@item.Id)" class="btn btn-danger" href="#"><i class="icon_close_alt2"></i>  Sil</a>
                                    </div>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </section>
    </div>
</div>