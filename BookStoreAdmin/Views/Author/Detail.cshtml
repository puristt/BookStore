<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                YENİ YAZAR EKLE
            </header>
            <div class="panel-body">
                <div class="form">
                    <form class="form-validate form-horizontal " id="register_form" method="get" action="">
                        <div class="form-group ">
                            <label for="fullname" class="control-label col-lg-2">Yazar Adı <span class="required">*</span></label>
                            <div class="col-lg-8">
                                <input class=" form-control" id="fullname" name="fullname" type="text" />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="address" class="control-label col-lg-2">Açıklama <span class="required">*</span></label>
                            <div class="col-lg-8">
                                <textarea class="form-control" name="message" rows="5" data-rule="required" data-msg="Please write something for us" placeholder="Message"></textarea>
                                <div class="validation"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-success" type="submit">Ekle</button>
                                <button class="btn btn-default" type="button">İptal</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>